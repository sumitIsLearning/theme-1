<!-- /templates/customers/account.liquid -->

{% comment %} {% if customer.default_address %}
  <h2>Address</h2>
  <p>{{ customer.default_address.address1 }}</p>
  {% if customer.default_address.address2 != "" %}
    <p>{{ customer.default_address.address2 }}</p>
  {% endif %}
  <p>{{ customer.default_address.city}}, {% if customer.default_address.province_code %}{{ customer.default_address.province_code }}, {% endif %}{{ customer.default_address.country }}</p>
  <p>{{ customer.default_address.zip }}</p>
  <p>{{ customer.default_address.phone }}</p>
{% endif %}

<div id="customer_orders">
  <h2>Orders</h2>
  {% paginate customer.orders by 10 %}
  {% if customer.orders.size != 0 %}
    {% for order in customer.orders %}
      <!-- order details here -->
    {% endfor %}
  {% else %}
    <p>You haven't placed any orders yet.</p>
  {% endif %}
  {{ paginate | default_pagination }}
  {% endpaginate %}
</div> {% endcomment %}


<div class="min-h-screen bg-gray-100 py-8">
  <!-- Account Header -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-3xl font-bold text-gray-800">My Account</h1>
    <p class="text-gray-600 mt-2">Manage your account details and orders.</p>
  </div>

  <!-- Account Sections -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-6">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <!-- Profile Section -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-800">Profile Information</h2>
        <p class="text-sm text-gray-600 mt-1">Edit your personal details.</p>
        <div class="mt-4 space-y-2">
          <p><strong>Name:</strong> {{customer.name}}</p>
          <p><strong>Email:</strong> {{customer.email}}</p>
          <button class="mt-4 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Edit Profile</button>
        </div>
      </div>

      <!-- Orders Section -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-800">Order History</h2>
        <p class="text-sm text-gray-600 mt-1">View your past orders.</p>
        <ul class="mt-4 space-y-3">
          <li class="border-b pb-2">
            <span>Order #12345</span>
            <span class="text-sm text-gray-500 block">Placed on 2024-12-01</span>
            <button class="mt-2 text-blue-600 hover:underline">View Details</button>
          </li>
          <li class="border-b pb-2">
            <span>Order #12344</span>
            <span class="text-sm text-gray-500 block">Placed on 2024-11-15</span>
            <button class="mt-2 text-blue-600 hover:underline">View Details</button>
          </li>
        </ul>
      </div>

      <!-- Address Section -->
      <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-lg font-semibold text-gray-800">Addresses</h2>
        <p class="text-sm text-gray-600 mt-1">Manage your saved addresses.</p>
        <div class="mt-4 space-y-3">
          <div>
            <p class="text-gray-800">123 Main St, City, Country</p>
            <button class="mt-1 text-blue-600 hover:underline">Edit</button>
          </div>
          <div>
            <p class="text-gray-800">456 Elm St, City, Country</p>
            <button class="mt-1 text-blue-600 hover:underline">Edit</button>
          </div>
        </div>
        <button class="mt-4 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700">Add Address</button>
      </div>
    </div>
  </div>

  <!-- Logout Button -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 mt-8">
    <button class="px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">Logout</button>
  </div>
</div>

