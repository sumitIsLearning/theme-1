<!-- templates/blog.liquid -->
{% layout 'default' %}

<div class="container mx-auto px-4 py-8">
  <!-- Blog Title -->
  <h1 class="text-4xl font-semibold text-center mb-8">Our Blogs</h1>

  <!-- Blog Grid -->
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    {% for article in blog.articles %}
    <div class="bg-white border border-gray-200 shadow-lg rounded-lg overflow-hidden">
      {% if article.image %}
        <img class="w-full h-48 object-cover" src="{{article.image.src |  image_url }}" width="" height="">
      {% else %}
      <img class="w-full h-48 object-cover" src="path/to/placeholder-image.jpg" alt="Placeholder Image" width="" height="">
      {% endif %}
      
      <div class="p-4">
        <h2 class="text-xl font-bold text-gray-800">{{ article.title }}</h2>
        <p class="text-gray-600 mt-2">{{ article.excerpt | truncatewords: 30 }}</p>
        <a href="{{ article.url }}" class="text-blue-500 hover:underline mt-4 block">Read More</a>
      </div>
    </div>
    {% endfor %}
  </div>

  <!-- Pagination -->
  <div class="mt-8 text-center">
    <div class="inline-block">
      {% if blogs.first.previous_page %}
      <a href="{{ blogs.first.previous_page_url }}" class="px-4 py-2 bg-blue-500 text-white rounded-l-lg hover:bg-blue-600">Previous</a>
      {% endif %}

      {% if blogs.first.next_page %}
      <a href="{{ blogs.first.next_page_url }}" class="px-4 py-2 bg-blue-500 text-white rounded-r-lg hover:bg-blue-600">Next</a>
      {% endif %}
    </div>
  </div>
</div>

